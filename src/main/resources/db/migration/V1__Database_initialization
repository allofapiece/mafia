drop table if exists `role`;
drop table if exists `room`;
drop table if exists `user`;
create table `role`
(
    `id` bigint generated by default as identity,
    primary key (`id`)
);
create table `room`
(
    `id` bigint generated by default as identity,
    primary key (`id`)
);
create table `user`
(
    `id`       bigint generated by default as identity,
    `status`   varchar(255) NOT NULL DEFAULT 'ACTIVE',
    `username` varchar(255),
    `room_id`  bigint,
    primary key (`id`)
);
alter table `user`
    add constraint `FKka86kdnug8uwmlylletgja0x0` foreign key (`room_id`) references `room`;